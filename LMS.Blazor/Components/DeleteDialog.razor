@if (ShowDialog)
{
<div class="modal fade show d-block" id="delModal" tabIndex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titleLabel">Confirm Delete</h5>
                <button type="button" class="close" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    Are you sure you want to delete this item?
                </div>
                <div class="mt-3 d-flex justify-content-end">
                    <button class="btn btn-danger mx-2" @onclick="@DeleteConfirmed">Delete</button>
                    <button class="btn btn-outline-secondary" @onclick="@Close">Cancel</button>
                </div>
            </div>

        </div>

    </div>    
</div>
}